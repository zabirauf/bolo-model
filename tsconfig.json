{
    "compilerOptions": {
		"outDir": "./dist/",
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"declaration": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es5",
			"es2015.promise"
		]
    },
    "include": [
		"./src/**/*",
		"index.ts"
    ]
}
